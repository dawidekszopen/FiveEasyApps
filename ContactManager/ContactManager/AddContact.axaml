<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ContactManager.AddContact"
        RequestedThemeVariant="Light"
        Width="250"
        CanResize="False"
        Title="Add Contact">
    <StackPanel HorizontalAlignment="Center">
        
        <TextBlock Text="Dodaj Kontakt" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" Margin="20"/>
        <TextBox Watermark="Imie" Margin="20" Width="200" x:Name="Imie"/>
        <TextBox Watermark="Nazwisko" Margin="20" Width="200" x:Name="Nazwisko"/>
        <TextBox Watermark="Numer Telefonu" Margin="20" Width="200" x:Name="NrTel"/>
        <TextBox Watermark="Email" Margin="20" Width="200" x:Name="Email"/>

        <Button Margin="20" Content="Dodaj" HorizontalAlignment="Center" Click="SendKontakt"/>
    </StackPanel>
</Window>
